{
  "name": "tiny-ts-mapper",
  "version": "0.1.0",
  "description": "Ultra-light TS toolkit for safe DTOâ†”Domain mapping (schemas, codecs, safeParse/Encode/Decode).",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier -w \"src/**/*.{ts,tsx}\"",
    "benchmark": "tsx ./src/demo/benchmark.ts"
  },
  "devDependencies": {
    "tsx": "^4.20.6"
  }
}
